<% if @user.errors.any? %>
   <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %>
        <%= t".head" %>:</h2>
        <p><%= t".desc" %>:</p>
      <ul>
      <% @user.errors.full_messages.each do |msg| %>
         <li><%= msg %></li>
      <% end %>
      </ul>
   </div>
<% end %>
