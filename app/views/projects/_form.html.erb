<%= form_for(@project,  :html => { :class => "project_form" }) do  | f | %>
  <fieldset>
    <legend>Project form</legend>
    <table>
      <tbody>
        <tr>
          <td>Name</td>
          <td><%= f.text_field :name %></td>
        </tr>
        <tr>
          <td>Tag Fields Definition (JSON) </td>
          <td><%= f.text_area :tags_definition %></td>
        </tr>
        <tr>
          <td>Preset File (must be an .xml file)</td>
          <td><% if @project.preset_filename %>
          Current file: <%= link_to @project.preset_filename, @project.preset_public_path  %> <br />
          <% end %>
            <%= f.file_field :file_upload %></td>
        </tr>
      </tbody>

    </table>
    <%= f.submit %>
  </fieldset>
<% end %>
<% if params[:action] == "edit" && current_user.admin? %>
  <%= button_to "Delete this record", @project, :method=>:delete, :class=>:destroy_button,:confirm=>"Are you sure you want to delete this?" %>
<% end %>
